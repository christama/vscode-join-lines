{
	"name": "join-lines",
	"description": "Use Ctrl-j to join lines, just like in Atom and similar to Sublime Text.",
	"icon": "images/join-lines-icon.png",
	"galleryBanner" : {
		"color": "#1e1e1e",
		"theme" : "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/wmaurer/vscode-join-lines.git"
	},
	"bugs": {
		"url": "https://github.com/wmaurer/vscode-join-lines/issues"
	},
	"homepage": "https://github.com/wmaurer/vscode-join-lines/blob/master/README.md",
	"license": "MIT",
	"version": "0.1.3",
	"publisher": "wmaurer",
	"engines": {
		"vscode": "^0.10.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.join-lines"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.join-lines",
				"title": "Join Lines"
			}
		],
		"keybindings": [
			{
				"command": "extension.join-lines",
				"key": "ctrl+j"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"vscode": "0.10.x"
	}
}
